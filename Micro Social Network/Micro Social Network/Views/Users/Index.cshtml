@{
    ViewBag.Title = "Index";
}

<br />
<br />

<div class="row">
    @foreach (var user in ViewBag.UsersList)
    {
        <div class="col-4 mb-4">
            <div class="card" style="height:100%; width: 100%;">

                <div class="card-body d-flex justify-content-between flex-column">
                    <div>
                        <p><i class="bi bi-person"> </i> Nume utilizator: @user.UserName</p>

                        <p><i class="bi bi-envelope"></i> Email: @user.Email</p>

                        <p> Vizibilitate profil: 
                            @if(user.Visible)
                            {
                                @: Public
                            }
                            else
                            {
                                @: Privat
                            }
                        </p>

                        @if (@user.FirstName != null)
                        {
                            <p><i class="bi bi-person"> </i> Nume: @user.FirstName</p>
                        }


                        @if (@user.LastName != null)
                        {
                            <p><i class="bi bi-person"> </i> Prenume: @user.LastName</p>
                        }


                        @if (@user.PhoneNumber != null)
                        {
                            <p><i class="bi bi-phone"></i> Telefon: @user.PhoneNumber</p>
                        }

                        @if (@user.Gender != null)
                        {
                            <p> Gen: @user.Gender</p>
                        }

                        @if (@user.BirthDate != null)
                        {
                            <p> Data nasterii: @user.BirthDate</p>
                        }

                    </div>
                    <div class="d-flex flex-row justify-content-between p-3">

                        <div> <a class="btn btn-success" href="/Users/Edit/@user.Id"> Editare utilizator</a> </div>

                        <div> <a class="btn btn-success" href="/Users/Show/@user.Id"> Vizualizare utilizator</a> </div>

                    </div>
                </div>

            </div>
        </div>
    }

</div>

<br />
<br />

